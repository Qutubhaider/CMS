@model dynamic;
@using CMSBAL.Category.Models;
@using CMSUtility.Utilities;
@using CMSUtility.Models;

@if (Model.GetCategoryList != null && Model.GetCategoryList.Count > 0)
{
    foreach (CategoryListResult loCategoryListResult in Model.GetCategoryList)
    {
        <tr>
            <td>@loCategoryListResult.stCategoryName</td>
            <td>@(loCategoryListResult.stParentCategoryName==null?"Self":loCategoryListResult.stParentCategoryName)</td>
            <td>@loCategoryListResult.stDepartmentName</td>
            <td class="text-center"><a asp-area="Admin" asp-controller="Category" asp-action="Detail" asp-route-id="@loCategoryListResult.unCategoryId" class="btn btn-outline-secondary btn-sm edit"><i class="fas fa-pencil-alt"></i> </a></td>
       </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5">No records found.</td>
    </tr>
}

@{
    Pagination loPagination = Model.Pagination;

    <input type="hidden" id="hdnCurrentPage" value="@loPagination.inCurrentPage">
    <input type="hidden" id="hdnTotalPage" value="@loPagination.inTotalPages" />
    <input type="hidden" id="hdnTotalRecords" value="@loPagination.inTotalRecords" />
    <input type="hidden" id="hdnNoOfRecordsMessage" value="@loPagination.stNoOfRecordsMessage" />

}



