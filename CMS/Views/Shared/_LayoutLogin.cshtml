@using CMSUtility.Utilities
<!doctype html>
<html lang="en">
<head>
        
        <meta charset="utf-8" />
        <title>Login | Complain Management System</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="DMF" name="description" />
        <meta content="DMF" name="author" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="~/logo.png">

        <!-- Bootstrap Css -->
        <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
        <!-- Icons Css -->
        <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

    </head>

<body class="bg-pattern">
    <div class="bg-overlay"></div>
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-lg-6 col-md-8">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="">
                                <div class="text-center">
                                    <a href="index.html" class="">
                                        <img src="~/logo.png" alt="" class="auth-logo logo-dark mx-auto" style="width: 100px;">
                                        <img src="~/logo.png" alt="" class="auth-logo logo-light mx-auto" style="width: 100px;">
                                    </a>
                                </div>
                                <!-- end row -->
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <p class="text-white-50">©
                        <script>document.write(new Date().getFullYear())</script> Complain Management System. <br /> Developed By <i class="mdi mdi-heart text-danger"></i> by Monochrome Lab</p>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- end Account pages -->
    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["Message"] != null)
    {
        @if (Convert.ToInt32(TempData["ResultCode"]) == (int)CommonFunctions.ActionResponse.Error)
        {
            <script type="text/javascript">
                toastr.error("@(TempData["Message"] as string)");
            </script>
        }
        else if (Convert.ToInt32(TempData["ResultCode"]) == (int)CommonFunctions.ActionResponse.Warning)
        {
            <script type="text/javascript">
                toastr.warning("@(TempData["Message"] as string)");
            </script>
        }
        else
        {
            <script type="text/javascript">
                toastr.success("@(TempData["Message"] as string)");
            </script>
        }
    }
</body>
</html>
